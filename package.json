{
    "name": "EcoClubJulesFe",
    "private": true,
    "scripts": {
        "start": "npm run css-watch",
        "css-build": "node-sass --omit-source-map-url sass/mystyles.scss client/main.css",
        "css-watch": "npm run css-build -- --watch",
        "test": "meteor test --once --driver-package meteortesting:mocha",
